<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.middleland.arduinodroid.fragments.thermometer.ThermometerFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >



        <net.middleland.arduinodroid.views.Thermometer
            android:id="@+id/thermometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="50dp"
            app:innerColor="@color/innerColor"
            app:middleColor="@color/middleColor"
            app:outerColor="@color/outerColor"
            app:radius="60dp"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="bold"
            tools:text="12 C" />




</FrameLayout>
